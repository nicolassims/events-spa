[Unit]
Description=Events App

[Service]
Type=simple
User=events
Group=events
Restart=on-failure
Environment=MIX_ENV=prod
Environment=PORT=8999
Environment=PROD=true
Environment=LANG=en_US.UTF-8

WorkingDirectory=/home/events/events-spa
ExecStart=/bin/bash /home/events/events-spa/server/start.sh

[Install]
WantedBy=multi-user.target
